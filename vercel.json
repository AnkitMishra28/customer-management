{
  "version": 2,
  "builds": [
    {
      "src": "crm-client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "crm-server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "crm-server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "crm-client/$1"
    }
  ]
} 